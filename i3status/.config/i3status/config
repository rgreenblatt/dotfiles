weather_owm {
  api_key = 'aa476b58ec76c002285f2b08031775e4'
  city = 'Providence, US'
  unit_temperature = 'C'
  format = '{temperature}, {rain} {forecast}'
  # format_forecast = '{rain} {description}'
  
  format_temperature = '{current:.0f}°{unit}'
  format_rain = '[\?if=amount {amount:.0f} {unit},]'
}

whatismyip {
  format = '{ip} {city}'
}

